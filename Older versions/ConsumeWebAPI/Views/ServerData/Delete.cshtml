        <div class="label">
            @Html.DisplayNameFor(model => model.IP)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.IP)
        </div>

        <div class="label">
            @Html.DisplayNameFor(model => model.Type)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Type)
        </div>

        <div class="label">
            @Html.DisplayNameFor(model => model.RecordIdentifier)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.RecordIdentifier)
        </div>
    </fieldset>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <p>
            <input type="submit" value="Delete" /> @Html.ActionLink("Cancel", "Index", null, new { @class = "actionlinkbutton" })
        </p>
    }
</article>

