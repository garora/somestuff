@model ConsumeWebAPI.Models.ServerDataModel

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Consume Asp.net WebAPI :: Delete</h2>

<article>
    <p>
        Here you can manipulat server data.
    </p>
    <h3>Are you sure you want to delete this?</h3>
    <fieldset>
        <legend>ServerDataModel</legend>

        <div class="label">
            @Html.DisplayNameFor(model => model.InitialDate)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.InitialDate)
        </div>

        <div class="label">
            @Html.DisplayNameFor(model => model.EndDate)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.EndDate)
        </div>

        <div class="label">
            @Html.DisplayNameFor(model => model.OrderNumber)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.OrderNumber)
        </div>

        <div class="label">
            @Html.DisplayNameFor(model => model.IsDirty)
        </div>
